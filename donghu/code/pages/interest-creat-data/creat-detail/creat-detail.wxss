@import "../../../utils/wxParse/wxParse.wxss";

page{
    background-color:  #fff;
    height: 100%;
}

scroll-view{
  height: 100%;
}

/*头部说明*/
.containt{
    width: 100%;
}

.header{
    display: flex;
    flex-direction: column;
    padding: 50rpx 32rpx;
    background-color: #fff;
}

.header .header-title{
    font-size: 24px;
}

.header .header-des{
    margin-top: 37rpx;
    display: flex;
    font-size: 15px;
}

.header .header-des .header-des-bouns{
    height: 28rpx;
    padding-left: 30rpx;
    padding-right: 20rpx;
    background: url(../../../images/￥.png) no-repeat 0 3rpx;
    background-size: 23rpx 23rpx;
    color: #fb5a6d;
    line-height: 28rpx;
    border-right: 1rpx solid #888;
}

.header .header-des .header-des-time{
    padding-left: 30rpx;
    height: 28rpx;
    line-height: 28rpx;
    color: #929292;
}

.containt .line{
    height: 20rpx;
    background-color: #efeff4; 
}

/*导航*/
.nav{
  display: flex;
  height: 100rpx;
  background-color: #fff;
  border-bottom: 1px solid #eee;
}

.nav-des,.nav-rule{
  flex: 1;
  text-align: center;
  line-height: 100rpx;
  color: #363636;
  font-size: 15px;
}

.nav .current{
  border-bottom: 6rpx solid #15aafa;
  color: #6ec3fc;
}

/*详细正文*/
.main{
    display: none;
    padding: 40rpx 20rpx 70rpx;
    margin-bottom: 90rpx;
    background-color: #fff;
}

.main image{
    width: 100%;
}

.rule{
    padding: 40rpx 20rpx 70rpx;
    margin-bottom: 90rpx;
    background-color: #fff;
}

.rule view{
    padding: 0 34rpx;
    display: flex;
    background-color: #fff;
    justify-content: center;
    align-items: center;
    text-align: center;
    font-size: 30rpx;
    color: #888;
    line-height: 1.8em;
}

.rule .strong{
    font-weight: 700;
    color: #111;
}

.block{
    display: block;
}

.none{
    display: none;
}

/*底部*/
.bottom-start{
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 89rpx;
    line-height: 89rpx;
    background-color: #10aeff;
    text-align: center;
    font-size: 18px;
    color: #fff;
    box-shadow: 0 -1rpx 1px #0499e5;
}

.bottom-end{
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 89rpx;
    line-height: 89rpx;
    text-align: center;
    font-size: 18px;
    color: #fff;
    background-color: #d7d7d7;
    box-shadow: 0 -1rpx 1px #d7d7d7;
}

