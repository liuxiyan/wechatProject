/*列表样式*/
.cell{
  width: 100%;
  position: relative;
  display: flex;
  margin: 20rpx 0 0;
  padding: 20rpx 20rpx 0;
  height: 214rpx;
  background-color: #fff;
  box-shadow: 0 0 2px #f3f3f3;
}

.cell .cell-tip{
  position: absolute;
  top: 20rpx;
  left: -5rpx;
  width: 84rpx;
  height: 38rpx;
  text-align: center;
  background-size: 84rpx 38rpx;
  color: #fff;
  font-size: 10px;
  /*减少4px,让文字居中*/
  line-height: 34rpx;
}

.cell .cell-image{
  height: 174rpx;
  width: 232rpx;
}

.cell .cell-des{
  flex: 1;
  margin-top: 10rpx;
  padding-left: 30rpx;
}

.cell .cell-des .cell-des-title{
  height: 70rpx;
  font-size: 16px;
  display: -webkit-box;
 	-webkit-line-clamp: 2;
 	-webkit-box-orient: vertical;
  text-overflow:ellipsis;
  overflow: hidden;
  line-height: 36rpx;
}

.cell .cell-des .cell-des-bonus{
  display: flex;
  margin-top: 18rpx;
}

.cell .cell-des .cell-des-bonus view{
    font-size: 12px;
    color: #a9a9a9;
    height: 28rpx;
}

.cell .cell-des .cell-des-bonus view:first-child{
  padding-left: 30rpx;
  padding-right: 10rpx;
  background: url(../../images/￥.png) no-repeat 0 3rpx;
  background-size: 23rpx 23rpx;
  color: #fb5a6d;
  line-height: 28rpx;
}

.cell .cell-des .cell-des-follow{
  display: flex;
  margin-top: 18rpx;
}

.cell .cell-des .cell-des-follow view{
  color: #a9a9a9;
  font-size: 10px;
  height: 22rpx;
}

.cell .cell-des .cell-des-follow view:first-child{
  padding-left: 30rpx;
  padding-right: 36rpx;
  background: url(../../images/follow.png) no-repeat 0 3.5rpx;
  background-size: 22rpx 16rpx;
  line-height: 22rpx;
}

.cell .cell-des .cell-des-follow view:last-child{
  padding-left: 33rpx;
  background: url(../../images/looked.png) no-repeat 0 3.5rpx;
  background-size: 25rpx 16rpx;
  line-height: 22rpx;
}

